<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:rowCount="6"
    android:id="@id/calculator_number_pad"
    android:layout_gravity="center"
    android:background="#7d3333">

    <Button
        android:layout_width="@dimen/calc_single_width_dp"
        android:layout_height="@dimen/calc_single_height_dp"
        android:text="@string/scientific_left_bracket"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/text_color"
        android:background="@drawable/numpad_calc_others_grey_background"
        android:textSize="@dimen/calc_text_size"
        android:layout_gravity="center"
        android:layout_column="0"
        android:layout_row="0"
        android:id="@id/scientific_left_bracket"/>

    <Button
        android:layout_width="@dimen/calc_single_width_dp"
        android:layout_height="@dimen/calc_single_height_dp"
        android:text="@string/scientific_right_bracket"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/text_color"
        android:background="@drawable/numpad_calc_others_grey_background"
        android:textSize="@dimen/calc_text_size"
        android:layout_gravity="center"
        android:layout_column="1"
        android:layout_row="0"
        android:id="@id/scientific_right_bracket"/>

</GridLayout>